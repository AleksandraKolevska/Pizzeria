@model Pizzeria.Models.Korisnici

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body style="background-color:#660000">
    <div class="jumbotron">

        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <h2>Registrirajte se</h2>
                @using (Html.BeginForm("SaveRecord", "Registracija", FormMethod.Post))
                {
                    <h6>Vnesete Ime:</h6> @Html.TextBoxFor(model => model.Ime, new { @class = "form-control", @placeholder = "Ime", required = true })
                    <h6>Vnesete Prezime:</h6> @Html.TextBoxFor(model => model.Prezime, new { @class = "form-control", @placeholder = "Prezime", required = true })
                    <h6>Vnesete Email:</h6> @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email", required = true })
                    <h6>Vnesete Username:</h6> @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "Username", required = true })
                    <h6>Vnesete Password:</h6> @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Password", @type = "password", required = true })
                    <h6>Vnesete Grad:</h6> @Html.TextBoxFor(model => model.Grad, new { @class = "form-control", @placeholder = "Grad" })
                    <h6>Vnesete Adresa:</h6> @Html.TextBoxFor(model => model.Adresa, new { @class = "form-control", @placeholder = "Adresa" })
                    <h6>Vnesete Godini:</h6> @Html.TextBoxFor(model => model.Godini, new { @class = "form-control", @placeholder = "Godini" })
                    <h6></h6>
                    <input type="submit" value=" Registriraj se" class="btn btn-block btn-primary" />
                }
            </div>
        </div>
    </div>
</body>
</html>
