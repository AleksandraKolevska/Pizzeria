

<html>
<head>
    <title>Vegetarijana</title>
    <style>
        a {
            color: #660000;
        }

        #myImg:hover {
            transform: scale(1.2);
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

</head>
<body style="background-color:#660000">
    @foreach (var obj in ViewData.Model)
    {
        if (obj.KategoriiID == 2 & obj.Velicina.Golemina == "Mala")
        {
            if (obj.Tip.ImePica == "Margarita")
            {<p></p>
                <div class="thumbnail" style="background-color:#ffece6">
                    <div class="row">

                        <div class="col-md-3">
                            <a href="/Image/Margarita">
                                <img id="myImg" src="~/Content/Pictures/2margaritaVV.png" alt="Margarita" width="200px" height="200px" />
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a href="/Image/Margarita">
                                <h1>@obj.Tip.ImePica</h1>
                            </a>
                            <h4>Sostojki</h4><h3>@obj.Opi.Sostojki</h3>
                        </div>
                    </div>
                </div>
                <p></p>
            }
            else if (obj.Tip.ImePica == "Hawaii")
            {
                <div class="thumbnail" style="background-color:#ffece6">
                    <div class="row">

                        <div class="col-md-3">
                            <a href="/Image/Hawaii">
                                <img id="myImg" src="~/Content/Pictures/3hawaiiVV.png" alt="Hawaii" width="200px" height="200px" />
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a href="/Image/Hawaii">
                                <h1>@obj.Tip.ImePica</h1>
                            </a>
                            <h4>Sostojki</h4><h3>@obj.Opi.Sostojki</h3>
                        </div>
                    </div>
                </div>
                <p></p>
            }
            else if (obj.Tip.ImePica == "Napoli")
            {
                <div class="thumbnail" style="background-color:#ffece6">
                    <div class="row">

                        <div class="col-md-3">
                            <a href="/Image/Napoli">
                                <img id="myImg" src="~/Content/Pictures/4veganaVV.png" alt="Napoli" width="200px" height="200px" />
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a href="/Image/Napoli">
                                <h1>@obj.Tip.ImePica</h1>
                            </a>
                            <h4>Sostojki</h4><h3>@obj.Opi.Sostojki</h3>
                        </div>
                    </div>
                </div>

            }
        }
    }
    <script>
                       var log = sessionStorage.getItem('UserName');
                    if (document.getElementById("menuRightLogin") && log != null) {
                        $("#menuRightLogin").remove();
                        $("#menuRightLogoff").remove();
                            var html = '<ul id="menuRightLogoff" class="nav navbar-nav navbar-right">' +
                                '<li>@Html.ActionLink("Naracka", "Index", "Naracka", routeValues: null, htmlAttributes: new { id = "registracijaLink" })</li>' +
                                '<li><a id="logOff" href="/Account/Login">Log off</a></li>' +
                                '</ul>';


                        $('body > div.navbar.navbar-inverse.navbar-fixed-top > div > div.navbar-collapse.collapse').append(html);
                        $('#logOff').click(function () { sessionStorage.clear();});
                    } else {
                        $("#menuRightLogin").remove();
                        $("#menuRightLogoff").remove();
                      
                             var html = '<ul id="menuRightLogin" class="nav navbar-nav navbar-right">' +
                                '<li>@Html.ActionLink("Registracija", "Index", "Registracija", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>' +
                                '<li>@Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>' +
                                '</ul>';
                            $('body > div.navbar.navbar-inverse.navbar-fixed-top > div > div.navbar-collapse.collapse').append(html);

                        }
    </script>
</body>
</html>

