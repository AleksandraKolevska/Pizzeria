
@{
    ViewBag.Title = "Home Page";
}
<!Doctype html>
<html>
<head>

    <title>Pocetna</title>
    <style>
        a {
            color: #660000;
        }

        .jumbotron-billboard .img {
            margin-bottom: 0px;
            color: #fff;
            background: #000 url("/Content/Pictures/pizza-3-2.jpg") top center no-repeat;
            width: 100%;
            height: 400px;
            background-size: cover;
            overflow: hidden;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 1;
        }

        .jumbotron h2 {
            margin-top: 0;
        }

        .jumbotron {
            position: relative;
            padding-top: 50px;
            padding-bottom: 50px;
        }

            .jumbotron .container {
                position: relative;
                z-index: 2;
            }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

</head>
<body style="background-color:#660000">

    <div class="jumbotron jumbotron-billboard">
        <div class="img"></div>
        <div class="container">

        </div>
    </div>
    <div class=" container" style="padding-top: 27%;">
        <div class="row">
            <div class=" col-lg-4">
                <div class="thumbnail" style="text-align: center;background-color: #ffd9cc">
                    <a href="/KlasificiranaPica/KlasaPica">
                        <img src="~/Content/Pictures/klasikPica.png" alt=" klasik" width="200px" height="200px" />
                        <h1> Klasik</h1>

                    </a>
                </div>
            </div>
            <div class=" col-lg-4">
                <div class="thumbnail" style="text-align: center;background-color: #ffd9cc">
                    <a href="/KlasificiranaPica/Vegetarijana">
                        <img src="~/Content/Pictures/VegetarijanaPica.png" alt="Vrgrtarijana" width="200px" height="200px" />
                        <h1> Vegetarijana</h1>

                    </a>
                </div>
            </div>
            <div class=" col-lg-4">
                <div class="thumbnail" style="text-align: center;background-color: #ffd9cc">
                    <a href="/KlasificiranaPica/Posna">
                        <img src="~/Content/Pictures/PosnaPica.png" alt="PosnaPica" width="200px" height="200px" />
                        <h1> Posna</h1>
                    </a>
                </div>
            </div>
        </div>

    </div>
    <script>

        if ("@Session["UserName"]" == "") {
            sessionStorage.clear();
        } else { sessionStorage.setItem("UserName", "@Session["UserName"]"); }
        var log = sessionStorage.getItem('UserName');
                    if (document.getElementById("menuRightLogin") && log != null) {
                        $("#menuRightLogin").remove();
                        $("#menuRightLogoff").remove();
                            var html = '<ul id="menuRightLogoff" class="nav navbar-nav navbar-right">' +
                                '<li>@Html.ActionLink("Naracka", "Index", "Naracka", routeValues: null, htmlAttributes: new { id = "registracijaLink" })</li>' +
                                '<li><a id="logOff" href="/Account/Login">Log off</a></li>' +
                                '</ul>';


                        $('body > div.navbar.navbar-inverse.navbar-fixed-top > div > div.navbar-collapse.collapse').append(html);
                        $('#logOff').click(function () {
                            sessionStorage.clear();
                        });
                    } else {
                        $("#menuRightLogin").remove();
                        $("#menuRightLogoff").remove();
                        
                             var html = '<ul id="menuRightLogin" class="nav navbar-nav navbar-right">' +
                                '<li>@Html.ActionLink("Registracija", "Index", "Registracija", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>' +
                                '<li>@Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>' +
                                '</ul>';
                            $('body > div.navbar.navbar-inverse.navbar-fixed-top > div > div.navbar-collapse.collapse').append(html);

                        }
    </script>
</body>
</html>